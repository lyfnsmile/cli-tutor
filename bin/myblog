#!/usr/bin/env node

var program=require('commander');
var colors = require('colors');
var preview=require('../lib/cmd_preview');

//命名版本号
program.version('0.0.1');

//help命令
program
	.command('help')
	.description('显示使用帮助'.green)
	.action(function(){
		program.outputHelp();
	});

//create命令
program
	.command('create [dir]')
	.description('创建一个新的博客目录')
	.action(function(dir){
		console.log('create %S'.green ,dir.green )
	})

//preview命令
program
	.command('preview [dir]')
	.description('实时预览'.green)
	.action(preview)

//build命令
program
	.command('build [dir]')
	.description('生成整站静态HTML'.green)
	.option('-o, --output <dir>','生成的静态HTML存放目录')
	.action(function(dir,options){
		console.log('create %S, output $S'.green,dir, options.output.green)
	})


//开始解析命令
program.parse(process.argv)